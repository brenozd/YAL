def precision 0;
def round 2;

_init 
{
    let num;
    let original = 0;
    let remainder = 0;
    let result = 0;

    out 'enter a number: '; 
    in num;

    original = num;

    while(original != 0)
    {
        remainder = original % 10;
        outl remainder;
        result += remainder ^ 3;
        original /= 10;
    }

    if(result == num)
    {
        out num; outl ' is an Armstrong number';
    }
    else
    {
        out num; outl ' is not an Armstrong number';
    }
}